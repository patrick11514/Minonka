{
    "name": "minonka",
    "version": "0.0.1",
    "main": "build/index.js",
    "type": "module",
    "scripts": {
        "dev": "NODE_ENV=development tsx watch ./src/index.ts",
        "dev:worker": "NODE_ENV=development tsx watch ./src/Worker/Worker.ts",
        "dev:worker:remote": "NODE_ENV=development WORKER_MODE=remote tsx watch ./src/Worker/Worker.ts",
        "dev:register": "NODE_ENV=development tsx ./src/index.ts --register",
        "build": "mkdir -p build && tsc && tsc-alias",
        "start": "node ./build/index.js",
        "start:register": "node ./build/index.js --register",
        "start:worker": "node ./build/Worker/Worker.js",
        "start:worker:remote": "WORKER_MODE=remote node ./build/Worker/Worker.js",
        "genDatabaseSchema": "kysely-codegen --out-file ./src/types/database.ts",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint src",
        "check": "tsc --noEmit",
        "migration:create": "./script/createMigration.sh",
        "migrate": "tsx ./script/runMigration.ts",
        "prepare": "husky"
    },
    "dependencies": {
        "@types/strip-color": "^0.1.2",
        "cli-color": "^2.0.4",
        "discord.js": "^14.17.3",
        "dotenv": "^16.4.7",
        "express": "4.21.2",
        "kysely": "^0.27.5",
        "mysql2": "^3.12.0",
        "node-cron": "^3.0.3",
        "node-fetch": "^3.3.2",
        "prettier": "^3.4.2",
        "sharp": "^0.33.5",
        "strip-color": "^0.1.0",
        "ws": "^8.18.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.6",
        "@eslint/js": "^9.20.0",
        "@types/cli-color": "^2.0.6",
        "@types/express": "5.0.0",
        "@types/node": "^22.13.1",
        "@types/node-cron": "^3.0.11",
        "@types/ws": "^8.5.14",
        "eslint": "^9.20.0",
        "eslint-config-prettier": "^10.0.1",
        "husky": "^9.1.7",
        "kysely-codegen": "^0.17.0",
        "lint-staged": "^16.1.2",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.23.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "es5-ext",
            "esbuild",
            "sharp"
        ]
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
